<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity
        name="Trailmind\Access\AccessToken"
        table="access_tokens">
      <id name="id" column="id" type="string"/>
        <many-to-one field="user" target-entity="Trailmind\User\User">
            <join-column name="user_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-one field="client" target-entity="Trailmind\Access\Client">
            <join-column name="client_id" referenced-column-name="id" />
        </many-to-one>
        <field name="scopes" type="simple_array"/>
        <field name="revoked" type="boolean"/>
        <field name="createdAt" type="datetime"/>
        <field name="updatedAt" type="datetime"/>
        <field name="expiresAt" type="datetime"/>
  </entity>
</doctrine-mapping>