<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity
        name="Trailmind\User\User"
        table="users">
      <unique-constraints>
        <unique-constraint columns="email" name="UNIQ_USER_EMAIL"/>
      </unique-constraints>
      <id name="id" column="id" type="uuid">
        <generator strategy="CUSTOM"/>
        <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
      </id>
        <field name="email" type="string" length="255"/>
        <field name="name" type="string" length="255"/>
        <field name="password" type="string" length="255" nullable="true"/>
        <field name="salt" type="string" length="255" nullable="true"/>
        <field name="roles" type="json"/>
  </entity>
</doctrine-mapping>