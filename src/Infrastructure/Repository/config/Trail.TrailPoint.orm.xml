<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity
        name="Trailmind\Trail\TrailPoint"
        table="trail_points">
      <id name="id" column="id" type="uuid">
        <generator strategy="CUSTOM"/>
        <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
      </id>
        <many-to-one field="trail" target-entity="Trailmind\Trail\Trail">
            <join-column name="trail_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
        </many-to-one>
        <field name="latitude" type="float"/>
        <field name="longitude" type="float"/>
        <field name="elevation" type="float" nullable="true"/>
        <field name="sequenceNumber" type="integer"/>
  </entity>