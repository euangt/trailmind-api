<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity
        name="Trailmind\Trail\Trail"
        table="trails">
      <id name="id" column="id" type="uuid">
        <generator strategy="CUSTOM"/>
        <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
      </id>
        <field name="name" type="string"/>
        <field name="difficulty" type="string"/>
        <field name="length" type="float"/>
        <one-to-many field="trailPoints" target-entity="Trailmind\Trail\TrailPoint" mapped-by="trail">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>
        <many-to-one field="startPoint" target-entity="Trailmind\Trail\TrailPoint">
            <join-column name="start_point_id" referenced-column-name="id" nullable="true" on-delete="SET NULL"/>
        </many-to-one>
        <many-to-one field="endPoint" target-entity="Trailmind\Trail\TrailPoint">
            <join-column name="end_point_id" referenced-column-name="id" nullable="true" on-delete="SET NULL"/>
        </many-to-one>
        <field name="route" type="geography" nullable="true">
            <options>
                <option name="geometry_type">LINESTRING</option>
                <option name="srid">4326</option>
            </options>
        </field>
  </entity>
</doctrine-mapping>